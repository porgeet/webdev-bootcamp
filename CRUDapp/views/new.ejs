<% include ./partials/header %>
<div class="ui main container">
	<h1>Make Some News</h1>
	<form class="ui form" action="/news" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="news[title]" placeholder="Title">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="news[image]" placeholder="Image">
		</div>
		<div class="field">
			<label>Body</label>
			<textarea name="news[body]" cols="30" rows="10"></textarea>
		</div>
	</form>
</div>