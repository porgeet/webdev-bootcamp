<% include ./partials/header %>
<div class="ui main container">
	<h1>Edit <%= news.title %></h1>
	<form class="ui form" action="/news/<%= news._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="news[title]" value="<%= news.title %>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="news[image]" value="<%= news.image %>">
		</div>
		<div class="field">
			<label>Body</label>
			<textarea name="news[body]" cols="30" rows="10"><%= news.body %></textarea>
		</div>
		<button class="ui button" type="submit">Submit</button>
	</form>
</div>
<% include ./partials/footer %>
